<!--  LISTA DE USUARIOS - APARECE APENAS PARA OS ADMINS -->
<div class="col-9 col-xl-8">
  <div class="card bg-primary-subtle py-3 px-4">
    <nav class="navbar bg-primary-subtle border-bottom border-body py-3 px-0" data-bs-theme="light">
      <div class="container-fluid">
        <h1 class="title-edit"><%= t('index.title_user') %></h1>
        <%= form_with(url: panel_admin_users_path, method: :get, local: true, class: "d-flex") do |form| %>
          <%= select_tag :term, nil,
                prompt: t("form.search"),
                class: "form-control me-2 tom-select",
                id: "user-select" %>
        <% end %>
      </div>
    </nav>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th scope="col"><%= t('activerecord.attributes.user.full_name') %></th>
          <th scope="col"><%= t('activerecord.attributes.user.email') %></th>
          <th scope="col">
            <%= link_to new_panel_admin_user_path, class:"btn btn-info" do %>
              <i class="fa-light fa-user-plus"></i>
            <% end %>
          </th>
        </tr>
      </thead>
      <tbody>
        <% @admins.each do |admins_list| %>
          <tr>
            <td><%= admins_list.full_name %></td>
            <td><%= admins_list.email %></td>
            <td class="gap-1">         
              <%= link_to [:edit, :panel, :admin, admins_list], class:"btn btn-primary" do %>
                <i class="fa-light fa-user-pen"></i>
              <% end %>

              <%= link_to [:panel, :admin, admins_list], method: :delete, data: { turbo_method: :delete, turbo_confirm: "Tem certeza?" }, class:"btn btn-danger" do %>
                <i class="fa-light fa-user-xmark"></i>
              <%end%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= paginate @admins %> 
</div>
