<div class="col-8">
  <div class="card bg-primary-subtle">
    <div class="card-header bg-primary-subtle d-flex justify-content-between pb-0 px-4 pt-4">
      <h1 class="title-edit"><%= t("answer.title_subjects") %></h1>
      <div>
        <%= link_to new_panel_admin_subject_path, class:"btn btn-card" do %>
          <%= t('index.btn_new') %>
        <% end %>
      </div>
    </div>

    <div class="card-body bg-primary-subtle">
      <%= render "panel/admin/shared/subject_search", url: panel_admin_subjects_path %>
      <table class="table table-striped table-hover mt-3">
        <thead>
          <tr>
            <th scope="col"><%= t('activerecord.attributes.subject.description') %></th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @subjects.each do |subject| %>
            <tr>
              <td><%= subject.description %></td>
              <td class="text-center gap-1">
                <%= link_to edit_panel_admin_subject_path(subject), class:"btn btn-primary" do %>
                    <i class="fa-light fa-file-pen"></i>
                <% end %>

                <%= link_to panel_admin_subject_path(subject), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Tem certeza?" }, class:"btn btn-danger" do %>
                    <i class="fa-light fa-file-circle-xmark"></i>
                <%end%>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= paginate @subjects %> 
</div>