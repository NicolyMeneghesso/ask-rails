<div class="col-9 col-xl-7">
  <div class="card bg-primary-subtle py-3 px-4">
    <%= render "panel/admin/shared/subject_search", url: panel_admin_subjects_path, title: t("answer.title_subjects") %>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th scope="col"><%= t('activerecord.attributes.subject.id') %></th>
          <th scope="col"><%= t('activerecord.attributes.subject.description') %></th>
          <th scope="col"><%= t('activerecord.attributes.subject.quantity_answer') %></th>
          <th scope="col">
            <%= link_to new_panel_admin_subject_path, class:"btn btn-info" do %>
              <i class="fa-light fa-file-circle-plus"></i>
            <% end %>
          </th>
        </tr>
      </thead>
      <tbody>
        <% @subjects.each do |subject| %>
          <tr>
            <td><%= subject.id %></td>
            <td><%= subject.description %></td>
            <td><%= subject.questions_count %></td>
            <td class="gap-1">
              <%= link_to edit_panel_admin_subject_path(subject), class:"btn btn-primary" do %>
                  <i class="fa-light fa-file-pen"></i>
              <% end %>

              <%= link_to panel_admin_subject_path(subject), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Tem certeza?" }, class:"btn btn-danger" do %>
                  <i class="fa-light fa-file-circle-xmark"></i>
              <%end%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= paginate @subjects %> 
</div>