<div class="col-md-6">
  <div class="card">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-center">
        <h3 class="card-title" style="font-size: 1.3rem"><%= title %></h3>
        <div class="stat text-primary">
          <i class="<%= icon_class %>"></i>
        </div>
      </div>
      <h1 class="mt-3 mb-3"><%= value %></h1>
      <div>
        <% if defined?(labelQuestions) && labelQuestions.present? %>
          <span class="text-muted"><%= labelQuestions %></span>
          <span class="text-muted"><%= value_questions %></span>
        <% end %>
      </div>
      <div>
        <% if label.present? %>
          <span class="text-muted"><%= label %></span>
        <% end %>
        <% if percent.present?%>
          <span class="badge badge-success-light" style="color: black"><%= "#{percent}%" %></span>
        <% end %>
      </div>
    </div>
  </div>
</div>