<!-- calculo usuarios-->
<% user_counts_total = (@user_counts[0] + @user_counts[1] + @user_counts[2]) %>

<!--Calculo da porcentagem do total de perguntas para o usuario-->
<% total_site = @total_questions_count %>
<% total_users_statistic = @total_users_statistic %>
<% percent_answers_total_users = total_site > 0 ? (total_users_statistic.to_f / total_site * 100).round(1) : 0 %>

<!--Calculo da porcentagem do total de respostas certas-->
<% percent_users_statistic_right = total_users_statistic > 0 ? (@total_users_statistic_right.to_f / total_users_statistic * 100).round(1) : 0 %>

<!--Calculo da porcentagem do total de respostas erradas-->
<% percent_users_statistic_wrong = total_users_statistic > 0 ? (@total_users_statistic_wrong.to_f / total_users_statistic * 100).round(1) : 0 %>

<!-- Total de usuarios cadastrados -->
<div class="col-md-6">
  <div class="card">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-center">
        <h3 class="card-title"><%= t("statistics.admin.total_users") %></h3>
        <div class="stat text-primary">
          <i class="fa-light fa-comments-question"></i>
        </div>
      </div>
      <h1 class="mt-3 mb-3"><%= user_counts_total %></h1>
      <div>
        <span class="text-card-home"><%= t("statistics.admin.total_users_standard") %></span>
        <span class="text-card-home" style="font-weight: 600;"><%= @user_counts[0] || 0 %></span>
      </div>
      <div>
        <span class="text-card-home"><%= t("statistics.admin.total_users_admins") %></span>
        <span class="text-card-home" style="font-weight: 600;"><%= (@user_counts[1] || 0) + (@user_counts[2] || 0) %></span>      
      </div>
    </div>
  </div>
</div>
<!-- Total de questoes -->
<div class="col-md-6">
  <div class="card">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-center">
        <h3 class="card-title"><%= t("statistics.total_questions") %></h3>
        <div class="stat text-primary">
          <i class="fa-light fa-comments-question"></i>
        </div>
      </div>
      <h1 class="mt-3 mb-3"><%= percent_answers_total_users %></h1>
      <div>
        <span class="text-card-home"><%= t("statistics.labelQuestions.total_questions_site") %></span>
        <span class="text-card-home" style="font-weight: 600;"><%= @total_questions_count %></span>
      </div>
      <div>
        <span class="text-card-home"><%= t("statistics.label.questions") %></span>     
        <span class="text-card-home" style="font-weight: 600;"><%= "#{percent_answers_total_users} %" %></span>
      </div>
    </div>
  </div>
</div>
<!-- Certa -->
<div class="col-md-6">
  <div class="card">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-center">
        <h3 class="card-title"><%= t("statistics.right_questions") %></h3>
        <div class="stat text-primary">
          <i class="fa-light fa-comment-check"></i>
        </div>
      </div>
      <h1 class="mt-3 mb-3"><%= @total_users_statistic_right %></h1>
      <div>
        <span class="text-card-home"><%= t("statistics.label.right") %></span>
        <span class="text-card-home-number"><%= "#{percent_users_statistic_right} %" %></span>
      </div>
    </div>
  </div>
</div>
<!-- Errada -->
<div class="col-md-6">
  <div class="card">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-center">
        <h3 class="card-title"><%= t("statistics.wrong_questions") %></h3>
        <div class="stat text-primary">
          <i class="fa-light fa-comment-xmark"></i>
        </div>
      </div>
      <h1 class="mt-3 mb-3"><%= @total_users_statistic_wrong %></h1>
      <div>
        <span class="text-card-home"><%= t("statistics.label.wrong") %></span>
        <span class="text-card-home-number"><%= "#{percent_users_statistic_wrong} %" %></span>
      </div>
    </div>
  </div>
</div>
<!-- Total de assuntos cadastrados -->
<div class="col-md-6">
  <div class="card">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-center">
        <h3 class="card-title"><%= t("statistics.admin.total_subjects") %></h3>
        <div class="stat text-primary">
          <i class="fa-light fa-comments-question"></i>
        </div>
      </div>
      <h1 class="mt-3 mb-3"><%= @total_subjects %></h1>
    </div>
  </div>
</div>